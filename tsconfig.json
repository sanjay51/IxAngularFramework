{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ix-angular-elements": [
        "dist/ix-angular-elements"
      ],
      "ix-angular-elements/*": [
        "dist/ix-angular-elements/*"
      ],
      "ix-angular-api": [
        "dist/ix-angular-api"
      ],
      "ix-angular-api/*": [
        "dist/ix-angular-api/*"
      ]
    }
  }
}